<h1 align="center">Listing All Categories</h1>
<% @categories.each do |category| %>
<div align="center">
  <ul class="listing">
    <div class="row">
    <div class="well col-md-4 col-md-offset-4">
      <li class="article-title">
        <%= link_to "#{category.name}", category_path(category) %>
      </li>
    </div>
    </div>
</ul>
</div>
<% end %>
